<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Shadowverse Search</title>
    <base href="/">
    <link rel="stylesheet" href="/styles/cardSearch.css" />
  </head>
  <body>
    <header>
      <% include ./partials/navigation %>
      <h1>Card Search</h1>
    </header>
    <main>
      <section class="class-buttons">
        <ul id="crafts">
          <li data-class="1">
            <img class="class-image" src="/images/forest.png" alt="forest"/>
          </li>
          <li data-class="2">
            <img class="class-image" src="/images/sword.png" alt="sword"/>
          </li>
          <li data-class="3">
            <img class="class-image" src="/images/rune.png" alt="rune"/>
          </li>
          <li data-class="4">
            <img class="class-image" src="/images/dragon.png" alt="dragon"/>
          </li>
          <li data-class="5">
            <img class="class-image" src="/images/shadow.png" alt="shadow"/>
          </li>
          <li data-class="6">
            <img class="class-image" src="/images/blood.png" alt="blood"/>
          </li>
          <li data-class="7">
            <img class="class-image" src="/images/haven.png" alt="haven"/>
          </li>
          <li data-class="8">
            <img class="class-image" src="/images/portal.png" alt="portal"/>
          </li>
          <li data-class="0">
            <img class="class-image" src="/images/neutral.png" alt="neutral"/>
          </li>
        </ul>
      </section>
      <section class="js-search-bar card-search">
        <form class="js-search-form card-form hidden-search">
          <label for="js-card-search">Search</label>
          <input type="text" for="js-card-search" value="">
        </form>
      </section>
      <section class="cards">
        <ul id="card-holder"></ul>
      </section>
    </main>
    <script src="//code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js" integrity="sha256-ABVkpwb9K9PxubvRrHMkk6wmWcIHUE9eBxNZLXYQ84k="
      crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/api.js"></script>
    <script type="text/javascript" src="/scripts/cardSearchScripts.js"></script>
  </body>
</html>